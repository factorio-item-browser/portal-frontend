<%
const title = "Factorio Item Browser";
const description = "Lorem ipsum dolor sit amet.";
const color = "#165868";
const openSearchUrl = "https://react.factorio-item-browser.com/opensearch.xml";
%>
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title><%= title %></title>
        <base href="/" />

        <meta name="description" content="<%= description %>">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="theme-color" content="<%= color %>">
        <meta name="msapplication-TileColor" content="<%= color %>" />
        <meta name="msapplication-TileImage" content="<%= require("./image/icon/tile-icon.png") %>" />

        <meta property="og:url" content="https://www.factorio-item-browser.com/">
        <meta property="og:image" content="<%= require("./image/icon/favicon.png") %>">
        <meta property="og:site_name" content="<%= title %>">
        <meta property="og:type" content="website">
        <meta property="og:title" content="<%= title %>">
        <meta property="og:description" content="<%= description %>">

        <link rel="shortcut icon" href="<%= require("./image/icon/favicon.png") %>" />
        <link rel="apple-touch-icon-precomposed" href="<%= require("./image/icon/apple-touch-icon.png") %>" />
        <link rel="search" type="application/opensearchdescription+xml" title="FIB Search" href="<%= openSearchUrl %>">
    </head>
    <body>
        <div id="app">
            <div class="loading-box-wrapper">
                <div class="loading-box">
                    <div class="loading-icon"></div>
                    <div class="loading-message">
                        <h2>Loading...</h2>
                        <span>Please wait.</span>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
