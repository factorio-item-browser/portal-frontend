<OpenSearchDescription
    xmlns="http://a9.com/-/spec/opensearch/1.1/"
    xmlns:moz="http://www.mozilla.org/2006/browser/search/"
>
    <ShortName>FIB Search</ShortName>
    <Description>Search the Factorio Item Browser</Description>
    <InputEncoding>UTF-8</InputEncoding>
    <Image width="16" height="16" type="image/x-icon">https://www.factorio-item-browser.com/favicon.ico</Image>
    <Image width="64" height="64" type="image/png">https://www.factorio-item-browser.com/asset/image/icon-64.png</Image>
    <Url type="text/html" template="https://www.factorio-item-browser.com/search/{searchTerms}" />
    <Url
        type="application/opensearchdescription+xml"
        rel="self"
        template="https://www.factorio-item-browser.com/opensearch.xml"
    />
    <moz:SearchForm>https://www.factorio-item-browser.com/</moz:SearchForm>
</OpenSearchDescription>
