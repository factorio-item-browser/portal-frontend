{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "jsx": "react",

    "noEmit": true,
    "sourceMap": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "typeRoots": ["node_modules/@types", "type"]
  },
  "include": ["src"]
}