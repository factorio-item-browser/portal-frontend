{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:flowtype/recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended",
        "plugin:import/warnings"
    ],
    "plugins": [
        "react",
        "prettier",
        "jest",
        "import",
        "flowtype"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "jest/globals": true
    },
    "globals": {
        "process": true
    },
    "rules": {
        "no-constant-condition": ["error", {
            "checkLoops": false
        }],
        "import/order": ["warn", {
            "newlines-between": "never",
            "alphabetize": {
                "order": "asc"
            }
        }],
        "prettier/prettier": "error"
    },
    "settings": {
        "import/resolver": "webpack",
        "react": {
            "version": "detect"
        }
    }
}
